{new UIPanel
   apology_results_panel
   (file "apology_results.milo")
   (interrupted_connection FALSE)
   (enter
      {should_show_apology.ep set
         should_show_extra_apology
         [interrupted_connection]
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (kAction_Confirm
            {shell_sfx play_select}
            {if_else {trial_mgr get_trial_mode}
               {ui goto_screen upsell_splash_screen}
               {ui goto_screen {results_shared_panel get next_screen}}
            }
            {shell_sfx play_select}
         )
         (kAction_Cancel
            {transition_to results_breakdown_screen}
            {shell_sfx play_back}
         )
      }
   )
}
{new UIScreen
   apology_results_screen
   (panels
      background_night_panel
      results_shared_panel
      results_cache_panel
      game_panel
      game_fade_out_panel
      apology_results_panel
   )
   (header_index 11)
   (focus apology_results_panel)
}