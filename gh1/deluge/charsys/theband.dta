#include ../config/macros.dta
{func dont_animate
   ($char)
   {&& {== {name $char} singer} $camera.stare_at_singer}
}
{func play_clip
   ($char $clip $anim_flags)
   {if {! {dont_animate $char}}
      {with_namespace
         {$char anim_space}
         {main.drv play $clip $anim_flags}
      }
   }
}
{func play_upcoming
   ($char $clip_flags)
   {if {&& {exists $char} {! {dont_animate $char}}}
      {with_namespace
         {$char anim_space}
         {main.drv play $clip_flags {'|' kAnimNow kAnimGraphLoop}}
      }
   }
}
{func set_frame_scale
   ($char $scale)
   {if {exists $char}
      {$char set_frame_scale $scale}
   }
}
{func band_play
   ($anim $flags)
   {foreach $char {char_sys stage_chars}
      {play_clip $char $anim $flags}
   }
}
{func main_clip_flags
   ($char)
   {with_namespace {$char anim_space} {main.drv get_first_flags}}
}
{func band_changeup
   ($char)
   {if {&& {& kBandActive {main_clip_flags $char}} {< {random_float} 0.2}}
      {play_clip $char kBandActive {'|' kAnimFirst kAnimGraphLoop}}
   }
}
{arena add_handlers
   (init {band_play kBandIdle {'|' kAnimReset kAnimGraphLoop}})
   (terminate
      {delete main_clip_flags}
      {delete band_play}
      {delete band_changeup}
      {delete play_clip}
      {delete play_upcoming}
      {delete set_frame_scale}
   )
   (downbeat
      {foreach $char {char_sys stage_chars}
         {band_changeup $char}
      }
   )
   (game_won {band_play kBandWin kAnimFirst})
   (game_lost
      {foreach $char {char_sys stage_chars}
         {if {! {dont_animate $char}}
            {with_namespace
               {$char anim_space}
               {main.drv play kBandLose kAnimNow}
            }
         }
      }
   )
   (upcoming_bass_on {play_upcoming bass kBandActive})
   (upcoming_bass_off {play_upcoming bass kBandIdle})
   (upcoming_drum_on {play_upcoming drummer kBandActive})
   (upcoming_drum_off {play_upcoming drummer kBandIdle})
   (upcoming_drum_normal {play_upcoming drummer kBandActive})
   (upcoming_drum_double {play_upcoming drummer kBandDouble})
   (upcoming_drum_half {play_upcoming drummer kBandHalf})
   (upcoming_drum_allbeat {play_upcoming drummer kBandAllbeat})
   (upcoming_sing_on {play_upcoming singer kBandActive})
   (upcoming_sing_off {play_upcoming singer kBandIdle})
   (upcoming_keys_on {play_upcoming keyboard kBandActive})
   (upcoming_keys_off {play_upcoming keyboard kBandIdle})
   (bass_half_tempo {set_frame_scale bass 0.5})
   (drum_half_tempo {set_frame_scale drummer 0.5})
   (keys_half_tempo {set_frame_scale keyboard 0.5})
   (sing_half_tempo {set_frame_scale singer 0.5})
   (bass_double_tempo {set_frame_scale bass 2})
   (drum_double_tempo {set_frame_scale drummer 2})
   (keys_double_tempo {set_frame_scale keyboard 2})
   (sing_double_tempo {set_frame_scale singer 2})
   (bass_normal_tempo {set_frame_scale bass 1})
   (drum_normal_tempo {set_frame_scale drummer 1})
   (keys_normal_tempo {set_frame_scale keyboard 1})
   (sing_normal_tempo {set_frame_scale singer 1})
}