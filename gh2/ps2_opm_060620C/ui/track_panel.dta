#define TRACK_END_FRAME (1920)
{new TrackPanel
   track_panel
   (file ../track/track.milo)
   (set_track_out {$this set_frame TRACK_END_FRAME})
   (set_track_in {$this set_frame 0})
   (animate_track
      ($start $end $period $units)
      {new AnimTask
         (anim $this kTaskRange)
         (units $units)
         (start $start)
         (end $end)
         (period $period)
      }
   )
   (animate_track_out
      {play_game_sfx TRACK_EXTEND_SFX}
      {$this animate_track 0 TRACK_END_FRAME 1 kTaskSeconds}
   )
   (animate_track_out_fast
      {$this animate_track 0 TRACK_END_FRAME 0.6 kTaskUISeconds}
   )
   (animate_track_in_fast
      {$this animate_track TRACK_END_FRAME 0 0.6 kTaskUISeconds}
   )
   (finish_load
      {$this set_showing FALSE}
      {$this set_track_out}
   )
   (intro_start
      {$this reset}
      {$this set_showing {gamecfg get show_track}}
      {$this set_track_in}
   )
   (intro_skip
      {$this reset}
      {$this set_showing {gamecfg get show_track}}
      {$this set_track_out}
   )
   (enter {game add_sink $this blow_streak})
   (exit {game remove_sink $this})
   (do_extend_sequence
      {$this animate_track_out}
      {new ScriptTask
         (delay 1.3)
         (units kTaskSeconds)
         (script
            {play_game_sfx nowbar_1}
            {$this pop_smasher 0}
            {$this set_smasher_glowing 0 TRUE}
         )
      }
      {new ScriptTask
         (delay 1.4)
         (units kTaskSeconds)
         (script
            {play_game_sfx nowbar_2}
            {$this pop_smasher 1}
            {$this set_smasher_glowing 1 TRUE}
         )
      }
      {new ScriptTask
         (delay 1.5)
         (units kTaskSeconds)
         (script
            {play_game_sfx nowbar_3}
            {$this pop_smasher 2}
            {$this set_smasher_glowing 2 TRUE}
         )
      }
      {new ScriptTask
         (delay 1.6)
         (units kTaskSeconds)
         (script
            {play_game_sfx nowbar_4}
            {$this pop_smasher 3}
            {$this set_smasher_glowing 3 TRUE}
         )
      }
      {new ScriptTask
         (delay 1.7)
         (units kTaskSeconds)
         (script
            {play_game_sfx nowbar_5}
            {$this pop_smasher 4}
            {$this set_smasher_glowing 4 TRUE}
         )
      }
      {new ScriptTask
         (delay 2)
         (units kTaskSeconds)
         (script {$this pop_smasher -1})
      }
      {new ScriptTask
         (delay 2.5)
         (units kTaskSeconds)
         (script
            {game foreach_player_matcher $m
               {$m refresh_track_buttons}
            }
         )
      }
   )
}