{new GHScreen
   demo_quit
   (allow_reset FALSE)
   (allow_timeout FALSE)
   (enter
      {if {meta is_up}
         {meta_music_stop}
      }
   )
   (poll
      {if_else {meta is_up}
         {do
            {if {! {meta_music_playing}}
               {gh2_quit}
            }
         }
         {gh2_quit}
      }
   )
}