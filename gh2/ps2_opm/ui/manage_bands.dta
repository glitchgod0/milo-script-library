#define MAX_NUM_PROFILES (8)
#define PROFILE_PANEL_COMMON (
   (button_idx 0)
   (set_up_bands
      {foreach_int $idx 0 MAX_NUM_PROFILES
         {do
            ($btn {sprintf "cp_band%d.btn" $idx})
            {if_else {campaign is_empty_profile $idx}
               {$this set_up_new_profile $btn}
               {$btn set_localized_text {campaign profile_name $idx}}
            }
         }
      }
   )
   (FOCUS_MSG
      {$this set
         button_idx
         {switch $new_focus
            (cp_band0.btn 0)
            (cp_band1.btn 1)
            (cp_band2.btn 2)
            (cp_band3.btn 3)
            (cp_band4.btn 4)
            (cp_band5.btn 5)
            (cp_band6.btn 6)
            (cp_band7.btn 7)
         }
      }
   )
   (focus cp_band0.btn)
)
{new GHPanel
   chooseprof_panel
   (file chooseprof.milo)
   PROFILE_PANEL_COMMON
   (finish_load {chooseprof.view set_frame 0})
   (set_up_new_profile
      ($btn)
      {$btn set_text new_band}
   )
   (enter
      {new AnimTask
         (anim chooseprof.view kTaskRange)
         (period 1)
         (start 0)
         (end 100)
      }
      {$this set_up_bands}
   )
}
{new GHScreen
   chooseprof_screen
   (panels meta chooseprof_panel helpbar)
   (focus chooseprof_panel)
   (allow_back FALSE)
   (helpbar
      (default
         (
            (fret1 help_select)
            (fret2 help_back)
            (strum help_updown)
         )
      )
   )
   (SELECT_MSG
      {do
         ($index {{ui focus_panel} get button_idx})
         {campaign set_profile_slot $index}
         {if_else {! {campaign is_empty_profile $index}}
            {ui goto_screen sel_difficulty_screen}
            {do
               {nameprof_screen set profile_slot $index}
               {nameprof_screen set back_screen chooseprof_screen}
               {nameprof_screen set next_screen sel_difficulty_screen}
               {nameprof_screen set can_go_back TRUE}
               {nameprof_screen set is_editing FALSE}
               {ui goto_screen nameprof_screen}
            }
         }
      }
      kDataUnhandled
   )
   (BUTTON_DOWN_MSG
      {if {== $button kPad_Tri}
         {$this backwards_anim}
         {synth play_sequence button_back}
         {ui goto_screen main_screen}
      }
      kDataUnhandled
   )
}
{new GHScreen
   options_chooseprof_screen
   (panels meta chooseprof_panel helpbar)
   (focus chooseprof_panel)
   (helpbar
      (default
         (
            (fret1 help_select)
            (fret2 help_back)
            (strum help_updown)
         )
      )
   )
   (SELECT_MSG
      {do
         ($index {{ui focus_panel} get button_idx})
         {if_else {! {campaign is_empty_profile $index}}
            {do
               {manage_band_screen set profile_slot $index}
               {ui goto_screen manage_band_screen}
            }
            {do
               {nameprof_screen set profile_slot $index}
               {nameprof_screen set back_screen options_chooseprof_screen}
               {nameprof_screen set next_screen options_chooseprof_screen}
               {nameprof_screen set can_go_back TRUE}
               {nameprof_screen set is_editing FALSE}
               {ui goto_screen nameprof_screen}
            }
         }
      }
      kDataUnhandled
   )
}
{new GHPanel nameprof_panel (file nameprof.milo) (focus profile.ten)}
{new GHScreen
   nameprof_screen
   (panels meta nameprof_panel helpbar)
   (focus nameprof_panel)
   (allow_back FALSE)
   (can_go_back TRUE)
   (is_editing FALSE)
   (initial_text 0)
   (profile_slot -1)
   (back_screen 0)
   (next_screen 0)
   (finish_load {{nameprof_panel find nameprof.view} set_frame 0})
   (enter
      {$this turn_off_ambient}
      {new AnimTask
         (anim {nameprof_panel find nameprof.view} kTaskRange)
         (period 1)
         (start 0)
         (end 100)
      }
      {if {$this get initial_text}
         {{nameprof_panel find profile.ten} set_text {$this get initial_text}}
         {$this set initial_text 0}
      }
   )
   (get_help_text
      ($array)
      {get_text_entry_help_text
         $array
         {nameprof_panel find profile.ten}
         {$this get can_go_back}
      }
   )
   (TEXT_ENTRY_MSG
      {do
         ($profile {{nameprof_panel find profile.ten} get_text})
         {cond
            ({==
                  $profile
                  ""}
               {ui push_screen error_no_profile_screen}
            )
            ({campaign
                  has_profile_name
                  $profile
                  {$this get is_editing}}
               {ui push_screen error_duplicate_profile_screen}
            )
            (TRUE
               {campaign set_profile_name $profile [profile_slot]}
               {synth play_sequence button_select}
               {autosave_goto {$this get next_screen}}
            )
         }
      }
      kDataUnhandled
   )
   (BUTTON_DOWN_MSG
      {if
         {&&
            {== $button kPad_Tri}
            {{nameprof_panel find profile.ten} no_text_entered}
            {$this get can_go_back}
         }
         {$this set profile_slot -1}
         {$this backwards_anim}
         {synth play_sequence button_back}
         {ui goto_screen {$this get back_screen}}
      }
      kDataUnhandled
   )
   (TRANSITION_COMPLETE_MSG
      {{nameprof_panel find profile.ten} resume_input}
      {helpbar set_display {$this get_help_text ()}}
   )
   (SELECT_MSG {helpbar set_display {$this get_help_text ()}} kDataUnhandled)
   (SCREEN_BACK_MSG
      {synth play_sequence button_back}
      {helpbar set_display {$this get_help_text ()}}
      kDataUnhandled
   )
}
{new UIPanel
   manage_band_panel
   (file manage_band.milo)
   (focus rename_band.btn)
}
{new GHScreen
   manage_band_screen
   (panels meta manage_band_panel helpbar)
   (focus manage_band_panel)
   (profile_slot -1)
   (helpbar
      (default
         (
            (fret1 help_continue)
            (fret2 help_back)
            (strum help_updown)
         )
      )
   )
   (enter
      {{manage_band_panel find manage_band.lbl} set_localized_text
         {sprintf
            {localize manage_band_title}
            {campaign profile_name [profile_slot]}
         }
      }
   )
   (SELECT_MSG
      {switch $component
         (rename_band.btn
            {nameprof_screen set profile_slot [profile_slot]}
            {nameprof_screen set back_screen manage_band_screen}
            {nameprof_screen set next_screen options_screen}
            {nameprof_screen set can_go_back TRUE}
            {nameprof_screen set initial_text {campaign profile_name [profile_slot]}}
            {nameprof_screen set is_editing TRUE}
            {ui goto_screen nameprof_screen}
         )
         (delete_band.btn
            {delete_confirm set selected_slot [profile_slot]}
            {ui goto_screen delete_confirm}
         )
      }
      kDataUnhandled
   )
   (BUTTON_DOWN_MSG
      {if {== $button kPad_Tri}
         {ui goto_screen options_chooseprof_screen}
      }
      kDataUnhandled
   )
}