{new HamPanel
   tutorial_next_panel
   (file "../low_button.milo")
   (focus right_hand.hnl)
   (hide_helpbar {! {shell_input in_controller_mode}})
   (helpbar_confirm_label continue)
   (show_hand_help FALSE)
   (on_complete options)
   (enter {right_hand.hnl set showing {! {shell_input in_controller_mode}}})
   (TRANSITION_COMPLETE_MSG
      {provider.hnp set_label 0 {{ui current_screen} get continue_token}}
   )
   (NAV_SELECT_MSG
      {do
         ($next_screen {{ui current_screen} get next_screen})
         {if_else {== $next_screen none}
            {switch [on_complete]
               (options {ui goto_screen options_tutorials_screen})
               (start_game {enter_gameplay})
            }
            {ui goto_screen $next_screen}
         }
      }
   )
   (controller_mode_entered {right_hand.hnl set showing FALSE})
   (controller_mode_exited {right_hand.hnl set showing TRUE})
}
{new HamPanel tutorial_general_panel_1 (file "tutorial_general_1.milo")}
{new HamScreen
   tutorial_general_screen_1
   (panels meta tutorial_general_panel_1 tutorial_next_panel)
   (focus tutorial_next_panel)
   (next_screen tutorial_general_screen_2)
   (continue_token continue)
}
{new HamPanel tutorial_general_panel_2 (file "tutorial_general_2.milo")}
{new HamScreen
