   (next_screen tutorial_general_screen_3)
   (continue_token continue)
}
{new HamPanel tutorial_general_panel_3 (file "tutorial_general_3.milo")}
{new HamScreen
   tutorial_general_screen_3
   (panels meta tutorial_general_panel_3 tutorial_next_panel)
   (focus tutorial_next_panel)
   (next_screen none)
   (continue_token
      {switch {tutorial_next_panel get on_complete}
         (options tutorial_done)
         (start_game
            {if_else {== perform {gamemode get gameplay_mode}}
               tutorial_done
               continue
            }
         )
      }
   )
   (enter {profile_mgr mark_tutorial_seen kTutorialGeneral})
}
