#define MAX_SNAPSHOTS_INDEX (16)
{new KinectSharePanel
   endgame_photos_upload_panel
   (file "endgame_photos_upload.milo")
   (hide_helpbar TRUE)
   (show_hand_help FALSE)
   (enter
      {provider_1btn.hnp set_label 0 mc_button_cancel}
      {right_hand.hnl set nav_provider provider_1btn.hnp}
   )
   (NAV_SELECT_MSG
      {switch $name
         (mc_button_cancel {ui goto_screen endgame_photos_cancel_screen})
         (ok {ui goto_screen endgame_photos_screen})
      }
   )
   (TRANSITION_COMPLETE_MSG {$this check_upload})
   (upload_complete
      ($msg)
      {endgame_photos_complete_screen set msg_token $msg}
      {ui goto_screen endgame_photos_complete_screen}
   )
}
{new HamPanel
   endgame_photos_panel
   (file "endgame_photos.milo")
   (focus right_hand.hnl)
   (helpbar_confirm_label none)
   (back_token back)
   (tex_index MAX_SNAPSHOTS_INDEX)
   (set_selected
      ($index)
      {set [tex_index]
         {if_else {== $index 0}
            MAX_SNAPSHOTS_INDEX
            {if_else {== $index MAX_SNAPSHOTS_INDEX}
               0
               $index
            }
         }
      }
   )
   (enter
      {right_hand.hnl set_controller_focus 0}
      {set [tex_index] MAX_SNAPSHOTS_INDEX}
      {photo.mat set diffuse_tex {gesture_mgr snapshot_tex [tex_index]}}
   )
   (exit)
   (NAV_HIGHLIGHT_MSG
      {if {== $component right_hand.hnl}
         {$this set_selected $index}
         {photo.mat set diffuse_tex {gesture_mgr snapshot_tex [tex_index]}}
      }
   )
   (NAV_SELECT_MSG
      {if {== $name back}
         {ui go_back_screen {{ui current_screen} get back_screen}}
      }
      {if {== $component right_hand.hnl}
         {endgame_photos_frame_panel set tex_index [tex_index]}
         {ui goto_screen endgame_photos_frame_screen}
      }
   )
}
{new HamPanel
   endgame_photos_frame_panel
   (file "endgame_photos_frame.milo")
   (focus right_hand.hnl)
   (back_token back)
   (tex_index 0)
   (enter {photo.mat set diffuse_tex {gesture_mgr snapshot_tex [tex_index]}})
   (NAV_SELECT_MSG
      {if {== $name back}
         {ui go_back_screen {{ui current_screen} get back_screen}}
      }
      {if {== $component right_hand.hnl}
         {if_else {platform_mgr is_any_user_signed_in_to_live}
            {if_else FALSE
               {do
                  {endgame_photos_upload_panel set_photo {$this find render.tex}}
                  {ui goto_screen endgame_photos_upload_screen}
               }
               {do
                  {endgame_photos_complete_screen set msg_token kinectshare_denied}
                  {ui goto_screen endgame_photos_complete_screen}
               }
            }
            {do
               {endgame_photos_complete_screen set msg_token kinectshare_error_signin}
               {ui goto_screen endgame_photos_complete_screen}
            }
         }
      }
   )
}
{new HamScreen
   endgame_photos_cancel_screen
   (panels endgame_photos_upload_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel set_yesno kinectshare_cancel_confirm_message}
      {endgame_photos_upload_panel set_pending_cancel}
   )
   (NAV_SELECT_MSG
      {if {== yes $name}
         {endgame_photos_upload_panel cancel_upload}
      }
      {ui goto_screen endgame_photos_upload_screen}
   )
}
{new HamScreen
   endgame_photos_upload_screen
   (panels endgame_photos_upload_panel)
   (focus endgame_photos_upload_panel)
   (back endgame_photos_cancel_screen)
   (enter)
}
{new HamScreen
   endgame_photos_complete_screen
   (panels dialog_panel)
   (focus dialog_panel)
   (msg_token '')
   (enter {dialog_panel set_ok [msg_token]})
   (NAV_SELECT_MSG {ui goto_screen endgame_photos_screen})
}
{new HamScreen
   endgame_photos_screen
   (panels meta background_panel endgame_photos_panel)
   (focus endgame_photos_panel)
   (back {endgame_photos_screen get back_screen})
   (back_screen none)
}
{new HamScreen
   endgame_photos_frame_screen
   (panels meta background_panel endgame_photos_frame_panel)
   (focus endgame_photos_frame_panel)
   (back {endgame_photos_frame_screen get back_screen})
   (back_screen endgame_photos_screen)
}