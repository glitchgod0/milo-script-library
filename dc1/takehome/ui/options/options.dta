{new HamPanel
   options_panel
   (file "options.milo")
   (focus calibration.btn)
   (show_back_button TRUE)
   (enter
      {memcardmgr add_sink $this (save_load_all_complete_msg)}
      {$this update_checks}
      {do
         ($user {user_mgr get_active_user})
         {if
            {'||'
               {! {platform_mgr is_user_signed_in $user}}
               {platform_mgr is_user_a_guest $user}
               {{profile_mgr get_profile $user} has_cheated}
               {profile_mgr is_playing_without_save_file}
            }
            {$this disable autosave.btn}
            {autosave_check.lbl set_showing FALSE}
            {shell_input update_button_zones}
         }
         #ifdef MICROSOFT_TAKEHOME
         {$this disable movies.btn}
         #endif
      }
   )
   (exit {memcardmgr remove_sink $this})
   (SELECT_MSG
      {switch $component
         (calibration.btn {ui goto_screen calibration_screen})
         (av_settings.btn {ui goto_screen options_av_screen})
         (autosave.btn
            {if_else {saveload_mgr is_autosave_enabled {user_mgr get_active_user}}
               {ui goto_screen autosave_disable_confirm_screen}
               {saveload_mgr enable_autosave {user_mgr get_active_user}}
            }
            {$this update_checks}
         )
         (tutorials.btn {ui goto_screen options_tutorials_screen})
         (movies.btn {ui goto_screen options_movie_screen})
         (natal_troubleshooter.btn {gesture_mgr show_gesture_troubleshooter})
         (back.btn {ui go_back_screen {{ui current_screen} get back}})
      }
   )
   (update_checks
      {autosave_check.lbl set_checked
         {profile_mgr is_autosave_enabled {user_mgr get_active_user}}
      }
   )
   (save_load_all_complete_msg {$this update_checks})
}
{new HamScreen
   options_screen
   (panels meta background_panel options_panel)
   (focus options_panel)
   (back main_screen)
}
{new HamScreen
   autosave_disable_confirm_screen
   (panels meta background_panel dialog_panel)
   (focus dialog_panel)
   (enter {dialog_panel set_yesno autosave_confirm})
   (SELECT_MSG
      {switch $component
         (opt1.btn
            {saveload_mgr disable_autosave {user_mgr get_active_user}}
            {ui goto_screen options_screen}
         )
         (opt2.btn {ui goto_screen options_screen})
      }
   )
}
{new HamPanel
   options_movie_panel
   (file "options_movie.milo")
   (focus intro.btn)
   (show_back_button TRUE)
   (enter
      {do
         ($user {user_mgr get_active_user})
         {if {! {{profile_mgr get_profile $user} is_content_unlocked robot}}
            {$this disable outro.btn}
            {shell_input update_button_zones}
         }
      }
   )
   (exit)
   (SELECT_MSG
      {switch $component
         (intro.btn {ui goto_screen intro_movie_screen})
         (outro.btn {ui goto_screen outro_movie_screen})
         (credits.btn
            {text_credits_screen set next_screen {ui current_screen}}
            #ifndef _SHIP
            {if_else $skip_movie_credits
               {ui goto_screen text_credits_screen}
               {ui goto_screen movie_credits_screen}
            }
            #else
            {ui goto_screen movie_credits_screen}
            #endif
         )
         (back.btn {ui go_back_screen {{ui current_screen} get back}})
      }
   )
}
{new HamScreen
   options_movie_screen
   (panels meta background_panel options_movie_panel)
   (focus options_movie_panel)
   (back options_screen)
}
{new MoviePanel
   outro_movie_panel
   (preload FALSE)
   (loop FALSE)
   (audio TRUE)
   (videos beat_game)
   (movie_done
      {if {== {ui current_screen} outro_movie_screen}
         {ui goto_screen options_movie_screen}
      }
   )
}
{new HamScreen
   outro_movie_screen
   (panels meta outro_movie_panel movie_overlay_panel)
   (focus movie_overlay_panel)
   (next_screen options_movie_screen)
   (skip_selected {ui goto_screen options_movie_screen})
}
{new MoviePanel
   intro_movie_panel
   (preload FALSE)
   (loop FALSE)
   (audio TRUE)
   (videos attract)
   (movie_done
      {if {== {ui current_screen} intro_movie_screen}
         {ui goto_screen options_movie_screen}
      }
   )
}
{new HamScreen
   intro_movie_screen
   (panels meta intro_movie_panel movie_overlay_panel)
   (focus movie_overlay_panel)
   (next_screen options_movie_screen)
   (skip_selected {ui goto_screen options_movie_screen})
}