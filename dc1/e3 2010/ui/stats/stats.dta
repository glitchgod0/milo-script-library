{new HamPanel
   stats_panel
   (file "stats.milo")
   (show_back_button 1)
   (enter
      {do
         ($profile {profile_mgr get_profile {user_mgr get_active_user}})
         ($stats {$profile get_stats})
         {$stats increment_count 0 1}
         {saveload_mgr autosave}
      }
      {$this display_stats}
   )
   (exit)
   (display_stats
      {do
         ($profile {profile_mgr get_profile {user_mgr get_active_user}})
         ($stats {$profile get_stats})
         {stats.lst set_provider $stats}
      }
   )
   (SELECT_MSG
      {switch $component
         (back.btn {ui go_back_screen {{ui current_screen} get back}})
      }
   )
}
{new HamScreen
   stats_screen
   (panels meta stats_panel)
   (focus stats_panel)
   (back main_screen)
}