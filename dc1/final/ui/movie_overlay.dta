{new HamPanel
   movie_overlay_panel
   (file "movie_overlay.milo")
   (hide_helpbar TRUE)
   (show_hand_help FALSE)
   (enter
      {{cursor_panel find depth_buffer.grp} set showing FALSE}
      {meta music_stop}
      {shell_input exit_controller_mode}
   )
   (exit
      {{cursor_panel find depth_buffer.grp} set showing TRUE}
      {meta music_start}
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (kAction_Confirm {{ui current_screen} skip_selected} kDataUnhandled)
         (kAction_Start {{ui current_screen} skip_selected} kDataUnhandled)
         (kAction_Cancel {{ui current_screen} skip_selected} kDataUnhandled)
      }
   )
}