{new HamPanel
   leaderboards_panel
   (file "leaderboards.milo")
   (focus button_01.sbt)
   (tertiary_token leaderboards_view_friends)
   (show_back_button TRUE)
   (enter
      {start_loading.trig trigger}
      {leaderboards download_scores {meta_performer song}}
      {right_hand.hbs set_provider leaderboards}
      {right_hand.hbs set_showing FALSE}
   )
   (exit)
   (leaderboards_loaded
      {finish_loading.trig trigger}
      {right_hand.hbs set_showing TRUE}
      {right_hand.hbs update_list}
      {if_else {== {leaderboards get_mode} kLeaderboardsSelf}
         {do
            ($index {leaderboards get_self_index})
            {if {!= $index -1}
               {right_hand.hbs scroll_to_index $index}
            }
         }
         {if {> {leaderboards num_scores} 0}
            {right_hand.hbs scroll_to_index 0}
         }
      }
      {$this set_up_buttons {leaderboards num_scores} FALSE}
   )
   (leaderboards_failed
      {finish_loading.trig trigger}
      {$this set_up_buttons 0 TRUE}
   )
   (set_up_buttons
      ($num_scores $failure)
      {if {== $num_scores 0}
         {do
            {if_else $failure
               {must_sign_in.lbl set_showing TRUE}
               {switch {leaderboards get_mode}
                  (kLeaderboardsTop {no_any_scores.lbl set_showing TRUE})
                  (kLeaderboardsFriends {no_friend_scores.lbl set_showing TRUE})
                  (kLeaderboardsSelf {no_self_score.lbl set_showing TRUE})
               }
            }
         }
      }
      {button_up.sbt hide_tape}
      {button_01.sbt hide_tape}
      {button_02.sbt hide_tape}
      {button_03.sbt hide_tape}
      {button_04.sbt hide_tape}
      {button_down.sbt hide_tape}
      {$this disable button_up.sbt}
      {$this disable button_01.sbt}
      {$this disable button_02.sbt}
      {$this disable button_03.sbt}
      {$this disable button_04.sbt}
      {$this disable button_down.sbt}
      {if {>= $num_scores 1}
         {button_01.sbt unhide_tape}
         {$this enable button_01.sbt}
      }
      {if {>= $num_scores 2}
         {button_02.sbt unhide_tape}
         {$this enable button_02.sbt}
      }
      {if {>= $num_scores 3}
         {button_03.sbt unhide_tape}
         {$this enable button_03.sbt}
      }
      {if {>= $num_scores 4}
         {button_04.sbt unhide_tape}
         {$this enable button_04.sbt}
      }
      {if {>= $num_scores 5}
         {button_up.sbt unhide_tape}
         {button_down.sbt unhide_tape}
         {$this enable button_up.sbt}
         {$this enable button_down.sbt}
         {scroll_arrows.grp set showing TRUE}
      }
      {$this set_focus button_01.sbt}
      {shell_input update_button_zones}
   )
   (BUTTON_DOWN_MSG
      {if
         {&&
            {== {{$this loaded_dir} get focus_component} button_01.sbt}
            {== $action kAction_Up}
         }
         {right_hand.hbs scroll_up}
      }
      {if
         {&&
            {== {{$this loaded_dir} get focus_component} button_04.sbt}
            {== $action kAction_Down}
         }
         {right_hand.hbs scroll_down}
      }
      kDataUnhandled
   )
   (SELECT_MSG
      {switch $component
         (button_01.sbt
            {$this show_gamercard $component {user_mgr get_active_user}}
         )
         (button_02.sbt
            {$this show_gamercard $component {user_mgr get_active_user}}
         )
         (button_03.sbt
            {$this show_gamercard $component {user_mgr get_active_user}}
         )
         (button_04.sbt
            {$this show_gamercard $component {user_mgr get_active_user}}
         )
         (back.btn {ui go_back_screen {{ui current_screen} get back}})
         (tertiary.btn
            {switch {leaderboards get_mode}
               (kLeaderboardsTop {leaderboards set_mode kLeaderboardsFriends})
               (kLeaderboardsFriends {leaderboards set_mode kLeaderboardsSelf})
               (kLeaderboardsSelf {leaderboards set_mode kLeaderboardsTop})
            }
            {switch {leaderboards get_mode}
               (kLeaderboardsTop {set [tertiary_token] leaderboards_view_top})
               (kLeaderboardsFriends {set [tertiary_token] leaderboards_view_friends})
               (kLeaderboardsSelf {set [tertiary_token] leaderboards_view_self})
            }
            {right_hand.hbs set_showing FALSE}
            {start_loading.trig trigger}
            {leaderboards download_scores {meta_performer song}}
            {helpbar update_tertiary_button $this}
         )
      }
   )
   (show_gamercard
      ($button $user)
      {do
         ($index {right_hand.hbs list_index_for_button $button})
         {leaderboards show_gamercard $index $user}
      }
   )
}
{new HamScreen
   leaderboards_screen
   (panels meta background_panel leaderboards_panel)
   (focus leaderboards_panel)
   (back choose_mode_screen)
}