      {band_ui_sink set_net_sync TRUE}
      {band_ui_sink set block_mode kBlockNone})
   (poll
      {ui reset_retail_demo_timeout})}
{new
   UIScreen
   loading_image_screen
   (panels loading_panel char_loading_panel)
   (enter
      {synth stop_all_sfx}
      {if
         {gamemode get load_chars}
         {char_cache load_instruments}}
      {ui goto_screen loading_instrument_screen})
   (poll
      {ui reset_retail_demo_timeout})}
{new
   UIScreen
   loading_instrument_screen
   (panels loading_instrument loading_panel)
   (enter
      {ui goto_screen loading_photo_screen})
   (poll
      {ui reset_retail_demo_timeout})}
{new
   LoadingPanel
   loading_photo
   (file
      {if_else
         $force_loading_image
         $force_loading_image
         {if_else
            {gamemode get load_chars}
            {if_else
               {gamemode is_band_arrangement}
               {random_context
                  {elem
                     {find $syscfg loading_screens}
                     1}}
               {switch
                  {{game
                        get_player_config
                        {game get leader_num}}
                     get_track_sym}
                  (guitar loading/ls_h2h_guitar.milo)
                  (bass loading/ls_h2h_bass.milo)
                  (drum loading/ls_h2h_drum.milo)
                  (vocals loading/ls_h2h_vocals.milo)}}
            ""}}
      kLoadStayBack)}
