{new
   UIPanel
   system_cheat_panel
   (file
      "cheat.milo")
   (focus cheat.lst)
   (enter
      {project.lbl
         set
         edit_text
         {sprintf
            "%s Cheats - %s"
            {elem
               {find $syscfg rnd title}
               1}
            {elem
               {find $syscfg version}
               1}}}
      {cheat.lst set_provider cheat_provider}
      {$this update_filter})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (2
            {ui pop_screen})
         (5
            {cheat_provider next_filter}
            {cheat.lst set_selected 0}
            {$this update_filter})}
      kDataUnhandled)
   (KEY_MSG
      {switch
         $key
         (323
            {$this button_down '' 14 8 $pad_num})
         (322
            {$this button_down '' 12 6 $pad_num})
         (321
            {$this button_down '' 1 11 $pad_num})
         (320
            {$this button_down '' 0 10 $pad_num})
         (10
            {handle
               ($this button_down '' 6 1 $pad_num)})})
   (SELECT_MSG
      {cheat_provider
         invoke
         {cheat.lst selected_pos}
         $user})
   (update_filter
      {filter.lbl
         set
         edit_text
         {cheat_provider filter}})
   (cheat_invoked
      ($script)
      {cheat.lst refresh})}
{new
   UIScreen
   system_cheat_screen
   (panels system_cheat_panel)
   (focus system_cheat_panel)
   (is_system_cheat 1)}
{func
   show_cheat_screen
   ($screen)
   {unless
      {ui in_transition}
      {cond
         ({==
               {ui current_screen}
               $screen}
            {ui pop_screen})
         ({==
               {handle_ret
                  ({ui current_screen}
                     is_system_cheat)}
               1}
            {ui goto_screen $screen})
         (1
            {ui push_screen $screen})}}}