{new UIPanel
   accomplishments_retry_panel
   (file "accomplishment_retry.milo")
   (focus retry.btn)
   (reset_focus 1)
   (enter)
   (SELECT_MSG
      {switch $component
         (retry.btn
            {game send_restart_game_net_msg}
            {game_restart}
         )
         (quit.btn {ui goto_screen accomplishments_lose_confirm_quit_screen})
      }
   )
}
{new BandScreen
   accomplishments_retry_screen
   (panels accomplishments_retry_panel)
   (focus accomplishments_retry_panel)
}
{new BandScreen
   accomplishments_lose_confirm_quit_screen
   (panels accomplishments_retry_panel dialog_panel)
   (focus dialog_panel)
   (enter {dialog_panel set_yesno confirm_quit no.btn})
   (SELECT_MSG
      {switch $component
         (yes.btn {ui goto_screen meta_loading_continue_screen})
         (no.btn {ui goto_screen accomplishments_retry_screen})
      }
   )
}