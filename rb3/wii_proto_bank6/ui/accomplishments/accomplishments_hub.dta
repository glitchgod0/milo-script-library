{new UIPanel
   accomplishments_hub_panel
   (file "accomplishment_hub.milo")
   (focus missions.btn)
   (SELECT_MSG
      {switch $component
         (missions.btn {ui goto_screen accomplishments_mission_screen})
         (leaderboard.btn {ui goto_screen campaign_leaderboard_hub_screen})
         (index.btn {ui goto_screen accomplishment_categories_screen})
      }
   )
}
{new BandScreen
   accomplishments_hub_screen
   (panels
      meta
      sv7_panel
      accomplishments_status_panel
      accomplishments_hub_panel
   )
   (focus accomplishments_hub_panel)
   (back main_hub_screen)
   (enter
      {gamemode set_mode campaign}
      {net_sync set_ui_state 10}
   )
}