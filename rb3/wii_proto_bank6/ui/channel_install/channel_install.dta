{new
   UIPanel
   channel_install_panel
   (file
      "channel_install.milo")
   (finish_load
      {title.lbl
         set_token_fmt
         wii_spinoff_install_title
         {install_mgr get_channel_name}}
      {saveload_mgr add_sink $this}
      {install_mgr add_sink $this})
   (unload
      {saveload_mgr remove_sink $this}
      {install_mgr remove_sink $this})
   (channel_install_not_enough_channels_msg
      {ui goto_screen channel_install_not_enough_channels_screen})
   (channel_install_not_enough_space_msg
      {ui goto_screen channel_install_not_enough_space_screen})
   (channel_install_not_enough_inodes_msg
      {ui goto_screen channel_install_not_enough_inodes_screen})
   (channel_install_already_installed_msg
      {ui goto_screen_already_installed_screen})}
{new
   UIScreen
   channel_install_entry_screen
   (panels channel_install_panel)
   (focus channel_install_panel)
   (enter
      {if_else
         {install_mgr is_channel_installed}
         {ui goto_screen channel_already_installed_screen}
         {ui goto_screen channel_install_confirm_screen}})}
{new
   UIScreen
   channel_install_confirm_screen
   (panels channel_install_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel
         set_yesno
         (wii_spinoff_install_confirm
            {install_mgr get_channel_name}
            {install_mgr get_num_blocks})
         yes.btn})
   (SELECT_MSG
      {switch
         $component
         (yes.btn
            {ui goto_screen channel_install_screen})
         (no.btn
            {ui goto_screen main_hub_screen})}
      kDataUnhandled)}
{new
   UIScreen
   channel_install_screen
   (panels channel_install_panel)
   (focus channel_install_panel)
   (back main_hub_screen)
   (enter
      {install_mgr install_channel})}
{new
   UIScreen
   channel_already_installed_screen
   (panels channel_install_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel
         set_ok
         (wii_spinoff_error_already_installed
            {install_mgr get_channel_name})})
   (SELECT_MSG
      {switch
         $component
         (ok.btn
            {ui goto_screen main_hub_screen})}
      kDataUnhandled)}
{new
   UIScreen
   channel_install_not_enough_channels_screen
   (panels channel_install_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel set_custom wii_spinoff_error_not_enough_channels wii_spinoff_error_cancel wii_spinoff_return_to_data_management_screen opt1.btn})
   (SELECT_MSG
      {switch
         $component
         (opt1.btn
            {ui goto_screen main_hub_screen})
         (opt2.btn
            {install_mgr return_to_data_management_screen})}
      kDataUnhandled)}
{new
   UIScreen
   channel_install_not_enough_space_screen
   (panels channel_install_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel
         set_custom
         (wii_spinoff_error_not_enough_space
            {install_mgr get_num_blocks})
         wii_spinoff_error_cancel
         wii_spinoff_return_to_data_management_screen
         opt1.btn})
   (SELECT_MSG
      {switch
         $component
         (opt1.btn
            {ui goto_screen main_hub_screen})
         (opt2.btn
            {install_mgr return_to_data_management_screen})}
      kDataUnhandled)}
{new
   UIScreen
   channel_install_not_enough_inodes
   (panels channel_install_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel set_custom wii_spinoff_error_not_enough_inodes wii_spinoff_error_cancel wii_spinoff_return_to_data_management_screen opt1.btn})
   (SELECT_MSG
      {switch
         $component
         (opt1.btn
            {ui goto_screen main_hub_screen})
         (opt2.btn
            {install_mgr return_to_data_management_screen})}
      kDataUnhandled)}