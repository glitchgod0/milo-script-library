{new
   UIPanel
   store_bg_art_panel
   (file
      "store_background_art.milo")}
{new
   BandStorePanel
   store_panel
   (file
      "store.milo")
   (saved_offer_sym '')
   (load
      {$this reset_browser}
      {set
         [saved_offer_sym]
         ''})
   (enter
      {net_sync set_ui_state 9}
      {ps_logo.mesh set_showing 0}
      {motd.lbl set_showing 0}
      {wait.grp set_showing 0}
      {meta music_stop}
      {platform_mgr disable_xmp}
      #ifdef HX_XBOX
      {gamertag.lbl set_showing 1}
      {gamertag.lbl
         set_user_name
         {input_mgr get_user}}
      #else
      {gamertag.lbl set_showing 0}
      #endif)
   (exit
      {meta music_start}
      {platform_mgr enable_xmp})
   (enum_start
      {wait.grp set_showing 1})
   (enum_finished
      {wait.grp set_showing 0}
      #ifdef HX_XBOX
      {if_else
         {store_banner_panel is_waiting_on_enum}
         {store_banner_panel parse_config_data}
         {$this offers_done}}
      #endif)
   (offers_done
      {cond
         ({>
               {$this num_offers}
               1}
            {if_else
               {store_browser_panel is_up}
               {store_browser_panel refresh_list}
               {ui goto_screen store_browser_screen}})
         ({==
               {$this num_offers}
               1}
            {store_info_panel
               set
               cur_offer
               {$this lone_offer}}
            {ui goto_screen store_info_screen})
         {if
            {store_menu_panel is_up}
            {store_menu_panel reset_last_menu}}})
   (update_crumb_text
      {crumb.lbl
         set
         text_token
         {store_menu_panel get_crumb_text}})
   (preview_download_complete_msg
      {if
         {store_details_panel is_up}
         {store_details_panel
            refresh
            {store_info_panel get cur_offer}}})}
{new
   StoreMainPanel
   store_banner_panel
   (file
      "../store/store_main.milo")}
{new
   StoreMenuPanel
   store_menu_panel
   (file
      "store_menu.milo")
   (menu_list
      "filter.lst")
   (enter
      {{store_panel find sort.lbl}
         set_showing
         0}
      {{store_panel find sort_title.lbl}
         set_showing
         0}
      {$this update_loading_status})
   (exit
      {filter.lst conceal})
   (TRANSITION_COMPLETE_MSG
      {$this update_loading_status}
      {if
         {&&
            {!
               {filter.lst is_animating}}
            {!
               {store_panel request_in_progress}}}
         {filter.lst reveal}})
   (new_provider
      {store_panel update_crumb_text}
      {$this update_loading_status})
   (update_loading_status
      {loading.grp
         set_showing
         {store_panel request_in_progress}})
   (BUTTON_DOWN_MSG
      {if_else
         {'||'
            {!
               {store_panel is_loaded}}
            {!
               {filter.lst is_revealed}}}
         1
         {if_else
            {== $action 2}
            {do
               ($ret
                  {$this back})
               {$this update_loading_status}
               $ret}
            kDataUnhandled}})
   (SELECT_MSG
      {do
         ($provider
            {$this get_menu_provider})
         ($ix
            {$component selected_pos})
         {$provider set_highlight_ix $ix}
         {store_panel
            request
            {$provider get_string $ix}}
         {filter.lst conceal}
         {$this update_loading_status}})}
{new
   BandScreen
   store_menu_screen
   (panels meta store_menu_panel store_banner_panel store_panel)
   (focus store_menu_panel)
   (back store_root_screen)
   (BUTTON_DOWN_MSG
      {if_else
         {== $action 3}
         {do
            ($offer
               {store_banner_panel current_offer})
            {if
               $offer
               {store_info_panel set cur_offer $offer}
               {ui goto_screen store_info_screen}}}
         kDataUnhandled})}
{new
   HeldButtonPanel
   store_browser_panel
   (file
      "store_browser.milo")
   (focus song.lst)
   (joypad
      (hold_ms 500)
      (repeat_ms 80))
   (held_buttons
      (3 0.25))
   (saved_selected_pos -1)
   (saved_first_showing -1)
   (enter
      {store_panel hide_motd}
      {$this refresh_list}
      {if
         {!=
            [saved_selected_pos]
            -1}
         {song.lst
            set_selected
            [saved_selected_pos]
            [saved_first_showing]}}
      {store_panel
         set
         saved_offer
         {song.lst selected_sym}}
      {$this refresh}
      {store_panel show_sort})
   (refresh_list
      {do
         ($provider
            {store_panel offer_provider})
         {$provider
            build_list
            {find $syscfg store groupings by_artist}}
         {song.lst set_provider $provider}
         {song.lst set_selected 0}})
   (TRANSITION_COMPLETE_MSG
      {$this reset})
   (exit
      {{store_panel offer_provider}
         clear_list})
   (reset
      {set
         [saved_selected_pos]
         -1}
      {set
         [saved_first_showing]
         -1})
   (on_button_held
      ($user $raw_button $action $pad_num)
      {store_shortcut_panel shortcut_enter $user})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (2
            {store_preview_mgr clear_current_preview}
            kDataUnhandled)
         (3
            {if
               {!
                  {song.lst is_scrolling}}
               {song.lst
                  set_selected
                  {{store_panel offer_provider}
                     pos_to_next_group_pos
                     {song.lst selected_pos}}}
               {store_panel
                  set
                  saved_offer
                  {song.lst selected_sym}}
               {$this refresh}})
         kDataUnhandled})
   (SCROLL_MSG
      {if
         {== $component song.lst}
         {store_panel
            set
            saved_offer
            {song.lst selected_sym}}
         {$this refresh}})
   (refresh
      {if
         {$this selected_song}
         {store_details_panel
            refresh
            {$this selected_song}}
         {if_else
            {{$this selected_song}
               has_data
               preview_audio}
            {store_preview_mgr
               set_current_preview_file
               {sprintf
                  "%s%s"
                  {store_panel get_request_prefix}
                  {{$this selected_song}
                     get_data
                     (preview_audio)}}}
            {store_preview_mgr clear_current_preview}}})
   (SELECT_MSG
      {if_else
         {{store_panel offer_provider}
            is_chunk
            {song.lst selected_pos}}
         {if_else
            {==
               {song.lst selected_pos}
               0}
            {store_panel request_prev_chunk}
            {store_panel request_next_chunk}}
         {do
            {store_info_panel set reset 1}
            {store_panel
               set
               saved_offer
               {song.lst selected_sym}}
            {set
               [saved_selected_pos]
               {song.lst selected_pos}}
            {set
               [saved_first_showing]
               {song.lst first_showing}}
            {store_info_panel
               set
               cur_offer
               {{store_panel offer_provider}
                  find_offer
                  {song.lst selected_sym}}}
            {ui goto_screen store_info_screen}}})
   (selected_song
      {{store_panel offer_provider}
         find_offer
         {song.lst selected_sym}})
   (enum_finished
      {if
         {store_panel is_up}
         {song.lst refresh}})}
{new
   HeldButtonPanel
   store_details_panel
   (file
      "store_details.milo")
   (cur_preview_art
      "")
   (joypad
      (hold_ms 500)
      (repeat_ms 80))
   (finish_load
      {set
         [cur_preview_art]
         ""})
   (exit
      {store_panel cancel_art})
   (art_loaded
      {album.mat
         set
         diffuse_tex
         {store_panel album_tex}})
   (refresh
      ($offer)
      {artist.lbl set_offer_artist $offer}
      {album.lbl set_offer_album $offer}
      {if_else
         {$offer has_data genre}
         {genre.lbl
            set
            text_token
            {$offer
               get_data
               (genre)}}
         {genre.lbl
            set
            text_token
            ""}}
      {if_else
         {!=
            {$offer offer_type}
            pack}
         {year.lbl
            set_int
            {$offer
               get_data
               (year_released)}}
         {year.lbl
            set
            text_token
            ""}}
      {if_else
         {==
            {$offer offer_type}
            song}
         {do
            ($i 1)
            {diffs.grp set_showing 1}
            {foreach
               $part
               (STORE_PART_SYMBOLS)
               {do
                  ($rank
                     {$offer
                        get_data
                        (rank $part)})
                  ($tier
                     {song_mgr rank_tier $rank $part})
                  ($idd
                     {sprintf
                        "diff%i.idd"
                        $i})
                  {$idd
                     set_values
                     $part
                     $tier
                     {if_else
                        {&&
                           {== $part vocals}
                           {$offer has_data vocal_parts}}
                        {$offer
                           get_data
                           (vocal_parts)}
                        0}
                     {!= $rank 0}}
                  {$idd set_showing 1}}
               {set
                  $i
                  {'+' $i 1}}}
            {foreach_int
               $j
               $i
               10
               {{sprintf
                     "diff%i.idd"
                     $j}
                  set_showing
                  0}}}
         {difficulty.grp set_showing 0}}
      {downloading.grp
         set_showing
         {if_else
            {$offer has_data preview_audio}
            {store_preview_mgr
               is_downloading_file
               {sprintf
                  "%s%s"
                  {store_panel get_request_prefix}
                  {$offer
                     get_data
                     (preview_audio)}}}
            0}}
      {if_else
         {$offer has_data preview_art}
         {unless
            {==
               [cur_preview_art]
               {$offer
                  get_data
                  (preview_art)}}
            {set
               [cur_preview_art]
               {$offer
                  get_data
                  (preview_art)}}
            {album.mat set diffuse_tex default_album.tex}
            {store_panel
               load_art
               [cur_preview_art]
               $this}}
         {do
            {set
               [cur_preview_art]
               ''}
            {album.mat set diffuse_tex default_album.tex}}})}
{new
   HeldButtonPanel
   store_shortcut_panel
   (file
      "store_shortcut.milo")
   (focus group.lst)
   (enter
      {shortcut.grp set_showing 0})
   (shortcut_selected '')
   (shortcut_enter
      ($user)
      {store_browser_screen set_focus_panel $this}
      {{store_browser_panel find song.lst}
         set_state
         0}
      {shortcut.grp set_showing 1}
      {do
         ($offer_provider
            {store_panel offer_provider})
         ($list
            {store_browser_panel find song.lst})
         {group.lst
            set_data
            {$offer_provider get_shortcut_array}}
         {group.lst
            set_selected
            {$offer_provider
               pos_to_shortcut
               {$list selected_pos}}}}
      {set
         [shortcut_selected]
         {group.lst selected_pos}})
   (shortcut_exit
      {store_browser_screen set_focus_panel store_browser_panel}
      {{store_browser_panel find song.lst}
         set_state
         1}
      {shortcut.grp set_showing 0})
   (BUTTON_DOWN_MSG
      {if_else
         {== $action 2}
         {do
            {play_instr_sfx $user button_back}
            {$this shortcut_exit}}
         kDataUnhandled})
   (BUTTON_UP_MSG
      {if_else
         {== $action 3}
         {$this on_select}
         kDataUnhandled})
   (SELECT_MSG
      {$this on_select})
   (on_select
      {$this shortcut_exit}
      {unless
         {==
            [shortcut_selected]
            {group.lst selected_pos}}
         {do
            ($offer_provider
               {store_panel offer_provider})
            ($list
               {store_browser_panel find song.lst})
            {$list
               set_selected
               {$offer_provider
                  shortcut_to_pos
                  {group.lst selected_sym}}}
            {$list refresh}
            {store_browser_panel refresh}}})}
{new
   BandScreen
   store_browser_screen
   (panels
      meta
      postsong_sfx_panel
      store_bg_art_panel
      store_browser_panel
      (store_menu_panel
         (active 0)
         (always_load 0))
      store_details_panel
      store_panel
      store_shortcut_panel)
   (focus store_browser_panel)
   (back store_menu_screen)
   (enter
      {$this set_focus_panel store_browser_panel}
      {store_details_panel set_showing 1})}