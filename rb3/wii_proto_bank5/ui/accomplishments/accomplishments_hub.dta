{new CampaignHubPanel
   accomplishments_hub_panel
   (file "accomplishment_hub.milo")
   (focus groups.lst)
   (enter
      {goals_progress.lbl set_token_fmt
         goals_status_progress
         {acc_mgr get_num_completed_goals {campaign get_user}}
         {acc_mgr get_num_goals}
      }
      {{accomplishments_status_panel find header.lbl} set
         text_token
         career_header_main
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (
            (3)
            {ui goto_screen campaign_leaderboard_hub_screen}
         )
      }
      kDataUnhandled
   )
   (SELECT_MSG
      {accomplishment_categories_panel set_group {$this get_selected_group}}
      {ui goto_screen accomplishment_categories_screen}
   )
   (update_group_provider
      ($provider)
      {groups.lst set_provider $provider}
   )
   (get_selected_group_index {groups.lst selected_pos})
}
{new BandScreen
   accomplishments_hub_screen
   (panels
      meta
      sv7_panel
      accomplishments_status_panel
      accomplishments_hub_panel
   )
   (focus accomplishments_hub_panel)
   (back main_hub_screen)
   (enter
      {gamemode set_mode campaign}
      {net_sync set_ui_state 11}
   )
}