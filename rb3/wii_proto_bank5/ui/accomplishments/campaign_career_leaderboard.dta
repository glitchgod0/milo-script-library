{new CampaignCareerLeaderboardPanel
   campaign_career_leaderboard_panel
   (file "campaign_career_leaderboard.milo")
   (focus "leaderboard.lst")
   (update_leaderboard_provider
      ($provider)
      {leaderboard.lst set_provider $provider}
   )
   (refresh_leaderboard
      {if {$this is_up}
         {leaderboard.lst refresh}
         {empty.grp set_showing {<= {leaderboard.lst num_data} 0}}
         {lb_mode.lbl set text_token {$this get_mode_symbol}}
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (5
            {$this cycle_mode}
            {$this refresh_leaderboard}
         )
         kDataUnhandled
      }
   )
   (lb_success
      ($noresults $unranked $unplayed)
      {$this refresh_leaderboard}
   )
   (lb_failure {$this refresh_leaderboard})
   (load {$this set_use_dlc 0})
   (enter
      {title.lbl set text_token {$this get_scoretype}}
      {dlc.lbl set_showing 0}
   )
}
