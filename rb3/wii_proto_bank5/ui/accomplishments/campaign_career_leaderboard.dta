{new CampaignCareerLeaderboardChoicePanel
   campaign_career_leaderboard_choice_panel
   (file "campaign_career_leaderboard_choice.milo")
   (focus "instruments.lst")
   (scoretype '')
   (SELECT_MSG
      {$this set scoretype {$this get_selected_scoretype}}
      {campaign_career_leaderboard_panel set_scoretype [scoretype]}
      {ui goto_screen campaign_career_leaderboard_screen}
   )
   (BUTTON_DOWN_MSG
      {if {== $action 2}
         {$this set scoretype ''}
         {ui goto_screen campaign_leaderboard_hub_screen}
      }
      kDataUnhandled
   )
   (update_leaderboard_provider
      ($provider)
      {instruments.lst set_provider $provider}
      {if {!= [scoretype] ''}
         {instruments.lst set_selected [scoretype]}
      }
   )
   (get_selected_index {instruments.lst selected_pos})
}
