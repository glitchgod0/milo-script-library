{new BandScreen
   tour_quest_outro_screen
   (enter {ui goto_screen {get_tour_screen}})
}
{new BandScreen
   tour_part_difficulty_screen
   (panels meta sv4_panel part_difficulty_panel)
   (enter
      {overshell add_sink $this}
      {overshell begin_override_flow 1}
      {{tour performer} select_venue}
   )
   (exit {overshell remove_sink $this})
   (override_ended
      ($override_type $cancel)
      {if {== $override_type 1}
         {if_else $cancel
            {do
               {if_else {{tour performer} is_current_quest_custom}
                  {ui goto_screen song_select_screen}
                  {ui goto_screen tour_gigguide_screen}
               }
               {meta_performer clear_venue}
            }
            {ui goto_screen preloading_screen}
         }
      }
   )
}
{new QuestFilterPanel
   tour_gigguide_panel
   (file "tour_filters.milo")
   (focus "filters.lst")
   (is_showing_rules 0)
   (enter
      {hide_rules.trg trigger}
      {$this set is_showing_rules 0}
   )
   (update_all
      {name.lbl set text_token {{tour performer} current_quest}}
      {flavor.lbl set text_token {tour get_gig_flavor}}
      {description.lbl set
         text_token
         {{tour performer} current_quest_description}
      }
      {setlist_choose.lbl set text_token tour_choose_setlist}
      {total.sd set_values
         {{tour progress} get_num_stars}
         {{tour progress} get_total_stars_for_tour}
      }
      {$this update_for_selection}
   )
   (handle_option_pressed
      {if {'||' {! {session_mgr has_leader_user}} {is_leader_local}}
         {if_else [is_showing_rules]
            {hide_rules.trg trigger}
            {show_rules.trg trigger}
         }
         {$this set is_showing_rules {! [is_showing_rules]}}
         {if {session_mgr has_leader_user}
            {$this handle_leader_toggled_rules [is_showing_rules]}
         }
      }
   )
   (client_tour_hideshow_rules
      ($show)
      {if {! {is_leader_local}}
         {if_else $show
            {show_rules.trg trigger}
            {hide_rules.trg trigger}
         }
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (3 {$this handle_option_pressed})
         (2
            {if_else [is_showing_rules]
               {do
                  {hide_rules.trg trigger}
                  {$this set is_showing_rules 0}
                  0
               }
               kDataUnhandled
            }
         )
         kDataUnhandled
      }
   )
   (update_for_selection {$this update_details})
   (SCROLL_MSG
      {if {!= $component songs.lst}
         {$this update_for_selection}
      }
   )
   (update_filter_provider
      ($provider)
      {filters.lst set_provider $provider}
   )
   (get_selected_filter_index {filters.lst selected_pos})
   (get_songselect_screen song_select_screen)
   (get_diffselect_screen tour_part_difficulty_screen)
   (get_backscreen tour_gigguide_screen)
}
{new BandScreen
   tour_gigguide_init_screen
   (panels meta sv4_panel)
   (enter {{tour performer} initialize_next_gig})
   (TRANSITION_COMPLETE_MSG {ui goto_screen tour_gigguide_screen})
}
{new BandScreen
   tour_gigguide_screen
   (panels meta sv4_panel tour_gigguide_panel)
   (focus tour_gigguide_panel)
   (back main_hub_screen)
}