{new
   StoreRootPanel
   store_root_panel
   (file
      "store_root.milo")
   (focus dlc_store.btn)
   (enter
      {$this clear_all_metadata})
   (SELECT_MSG
      {switch
         $component
         (dlc_store.btn
            {store_panel set_store_mode dlc}
            {ui goto_screen store_menu_screen})
         (ugc_store.btn
            {store_panel set_store_mode ugc}
            {ui goto_screen store_menu_screen})
         (redeem_code.btn
            {ui goto_screen token_redemption_screen})})
   (BUTTON_DOWN_MSG
      {if_else
         {$this is_fetching}
         1
         kDataUnhandled})
   (clear_all_metadata
      {dlc_releases.lbl set text_token loading}
      {ugc_releases.lbl set text_token loading})
   (update_dlc_metadata
      ($data)
      {dlc_releases.lbl
         set_token_fmt
         new_releases_fmt
         {localize_separated_int
            {-
               {size
                  {find $data new_releases content}}
               1}}})
   (update_ugc_metadata
      ($data)
      {ugc_releases.lbl
         set_token_fmt
         new_releases_fmt
         {localize_separated_int
            {-
               {size
                  {find $data new_releases content}}
               1}}})}
{new
   BandScreen
   store_root_screen
   (panels meta store_root_panel store_panel)
   (focus store_root_panel)
   (back main_hub_screen)}
{new
   BandScreen
   store_loading_screen
   (panels meta meta_loading)
   (TRANSITION_COMPLETE_MSG
      {ui goto_screen store_real_loading_screen})}
{new
   BandScreen
   store_real_loading_screen
   (panels meta store_panel meta_loading)
   (TRANSITION_COMPLETE_MSG
      {if
         {store_panel get load_ok}
         {ui goto_screen store_root_screen}})}