{new
   TrainerChallenge
   vocal_basic_challenge
   (enter
      {set
         [failed]
         FALSE}
      {{beatmatch active_player 0}
         add_sink
         $this})
   (exit
      {{beatmatch active_player 0}
         remove_sink
         $this})
   (phrase_rating
      ($rating)
      {if
         {< $rating 4}
         {set
            [failed]
            TRUE}})
   (success
      {!
         [failed]})
   (reset
      {set
         [failed]
         FALSE})
   (restriction_token vocal_basic_challenge)
   (failed FALSE)}
{new
   TrainerChallenge
   vocal_deploy_challenge
   (enter
      {set
         [has_deployed]
         FALSE}
      {{beatmatch active_player 0}
         add_sink
         $this})
   (exit
      {{beatmatch active_player 0}
         remove_sink
         $this})
   (deploy
      {set
         [has_deployed]
         TRUE})
   (success
      [has_deployed])
   (restriction_token vocal_deploy_challenge)
   (has_deployed FALSE)}