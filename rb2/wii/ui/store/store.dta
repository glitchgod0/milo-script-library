                  {data02.lbl set
                     text_token
                     {sprintf {localize store_points} {[offer] price}}
                  }
                  {data03.lbl set
                     text_token
                     {sprintf
                        {localize store_points}
                        {if_else {< $current_points {[offer] price}}
