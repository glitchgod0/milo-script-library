{new
   UIPanel
   mailbox_panel
   (file
      "mailbox_wii.milo")
   (focus messagelistlong.lst)
   (helpbar
      (helpbar_back helpbar_select))
   (selected_message FALSE)
   (BUTTON_DOWN_MSG
      {cond
         ({== $action kAction_Cancel}
            {do
               {synth play button_back}
               {ui goto_screen main_community_screen}})
         ({&&
               {== $action kAction_Confirm}
               {>
                  {messaging_provider get_messages_count}
                  0}}
            {synth play button_select}
            {messagelist.lst set_showing FALSE}
            {messagelistlong.lst set_showing FALSE}
            {set
               [selected_message]
               TRUE}
            {message_panel
               set
               messagelist_pos
               {messagelistlong.lst selected_pos}}
            {message_panel
               set
               subject_lbl
               {messaging_provider
                  get_subject
                  {messagelistlong.lst selected_pos}}}
            {message_panel
               set
               message_lbl
               {messaging_provider
                  get_textbody
                  {messagelistlong.lst selected_pos}}}
            {accepting_invite_panel
               set
               gid_lbl
               {messaging_provider
                  get_gid
                  {messagelistlong.lst selected_pos}}}
            {messaging_provider
               delete_message
               {messagelistlong.lst selected_pos}}
            {ui goto_screen message_screen})
         ({>
               {messaging_provider get_messages_count}
               0}
            kDataUnhandled)
         (TRUE TRUE)})
   (enter
      {title.lbl set text_token mailbox_title_local}
      {empty.lbl set text_token empty_label_local}
      {platform_mgr add_sink $this}
      {messaging_provider enumerate_messages}
      {messagelist.lst set_showing FALSE}
      {messagelistlong.lst set_provider messaging_provider}
      {if_else
         {>
            {messaging_provider get_messages_count}
            0}
         {do
            {messagelistlong.lst set_showing TRUE}
            {empty.lbl set_showing FALSE}}
         {do
            {messagelistlong.lst set_showing FALSE}
            {empty.lbl set_showing TRUE}}}
      {set
         [selected_message]
         FALSE})
   (exit
      {platform_mgr remove_sink $this}
      {messaging_provider cleanup})
   (poll
      {if
         {&&
            {!
               {messagelistlong.lst showing}}
            {>
               {messaging_provider get_messages_count}
               0}}
         {do
            {messagelistlong.lst set_provider messaging_provider}
            {if_else
               {>
                  {messaging_provider get_messages_count}
                  0}
               {do
                  {messagelistlong.lst set_showing TRUE}
                  {empty.lbl set_showing FALSE}}
               {do
                  {messagelistlong.lst set_showing FALSE}
                  {empty.lbl set_showing TRUE}}}
            {set
               [selected_message]
               FALSE}}}
      {if_else
         {==
            {messaging_provider get_messages_count}
            0}
         {do
            ($helpbar_config
               {array 0})
            {push_back
               $helpbar_config
               (cancel helpbar_back)}
            {helpbar set_config $helpbar_config}}
         {do
            ($helpbar_config
               {array 0})
            {push_back
               $helpbar_config
               (cancel helpbar_back)}
            {push_back
               $helpbar_config
               (confirm helpbar_select)}
            {helpbar set_config $helpbar_config}}})
   (UI_CHANGED_MSG
      {if
         {&&
            {== $showing FALSE}
            {==
               [selected_message]
               TRUE}}
         {ui pop_screen}})}
{new
   BandScreen
   mailbox_screen
   (panels meta movie_panel options_background_panel mailbox_panel)
   (focus mailbox_panel)
   (helpbar
      ((cancel helpbar_cancel)
         (confirm helpbar_select)))
   (back main_community_screen)}
{new
   UIPanel
   message_panel
   (file
      "message_wii.milo")
   (focus Message.lbl)
   (helpbar
      (helpbar_back helpbar_confirm))
   (messagelist_pos 0)
   (subject_lbl
      "")
   (message_lbl
      "")
   (BUTTON_DOWN_MSG
      {if
         {== $action kAction_Confirm}
         {ui push_screen accepting_invite_screen}}
      {if_else
         {== $action kAction_Cancel}
         {ui goto_screen mailbox_screen}
         kDataUnhandled})
   (SELECT_MSG)
   (enter
      {Subject.lbl
         set_localized
         [subject_lbl]}
      {Message.lbl
         set_localized
         [message_lbl]})}
