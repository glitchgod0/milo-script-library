   loading_multi_content_screen
   (panels loading_multi_content_panel)
   (helpbar ((min_height 0)))
   (enter
      {tour create_test_event}
      {meta_performer set_song {{tour performer} next_song}}
      {ui goto_screen loading_screen}
   )
