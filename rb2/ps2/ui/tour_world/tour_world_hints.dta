{new UIPanel
   tour_world_new_staff_panel
   (file
      {if_else {{tour hint} is_first}
         "hints/tour_world_first_staff.milo"
         "hints/tour_world_new_staff.milo"
      }
   )
   (focus hire.btn)
   (reset_focus TRUE)
   (force_exit TRUE)
   (enter
      {fail "Staff hint not implemented"}
      {do
         ($hint {{tour performer} hint})
         ($num
            {if_else {> {$hint num_staff} 1}
               plural
               singular
            }
         )
         {desc.lbl set_localized
            {sprintf
               {localize
                  {sprintf
                     "tour_world_%s_staff_%s"
                     {if_else {{{tour performer} hint} is_first}
                        first
                        new
                     }
                     $num
                  }
               }
               {if_else {== $num plural}
                  {$hint num_staff}
                  {localize {$hint staff}}
               }
            }
         }
      }
   )
   (SELECT_MSG
      {{tour performer} hint_advance}
      #ifndef _SHIP
      {if {{tour performer} hint}
         {notify "More hints after new staff hint"}
      }
      {unless {{tour performer} can_leave_hometown}
         {notify "Unlocked new staff, but can't leave hometown!"}
      }
      #endif
      {switch $component
         (hire.btn
            {tour_world_staff_panel set back_screen tour_world_town_screen}
            {ui goto_screen tour_world_staff_screen}
         )
         (continue.btn {ui goto_screen {{tour performer} tour_screen FALSE} TRUE})
      }
   )
}
