         (kMCNoCard
            {set [done_polling] TRUE}
            {ui goto_screen auto_save_storage_missing_screen}
         )
         (kMCNotFormatted {ui goto_screen error_not_formatted_screen})
         {set [done_polling] TRUE}
         {ui goto_screen save_failed_screen}
