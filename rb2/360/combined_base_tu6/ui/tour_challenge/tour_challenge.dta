   (back tour_challenge_screen)
   (helpbar
      {if_else
         {{tour band}
            is_local}
         {if_else
            {==
               {{tour band}
                  challenge_status
                  {tour event}}
               kTourLocked}
            ((cancel helpbar_back))
            ((cancel helpbar_back)
               (confirm tour_challenge_play))}
         ()})
   (enter
      {input_mgr set_limit kLimitSessionLeader})}
{new
   TourChallengePanel
   tour_challenge_complete_panel
   (new_challenges TRUE)
   (file
      "tour_challenge_complete.milo")
   (focus
      "")
   (register_for_content TRUE)
   (BUTTON_DOWN_MSG
      {if
         {== $action kAction_Confirm}
         {synth play button_select}
         {unless
            {$this skip}
            {ui goto_screen meta_loading_continue_screen}}}
      kDataUnhandled)
   (enter
      {do
         ($band
            {tour band})
         ($event
            {tour event})
         ($num_new
            {$band num_new_challenge_unlocks})
         {unless
            {==
               {$event achievement}
               ''}
            {$band
               submit_band_achievement
               {$event achievement}}}
         {if
            {&&
               {==
                  {$band min_difficulty}
                  kDifficultyExpert}
               {$band is_challenge_impossible $event}}
            {$band submit_band_achievement ach_challenge_beat_impossible_expert}}
         {if
            {$band has_unlocked_impossible_challenge}
            {$band submit_band_achievement ach_challenge_unlocked_impossible}}
         {do
            ($required_part
               {$event required_part})
            {unless
               {== $required_part ''}
               {game
                  foreach_local_user
                  $user
                  {if
                     {&&
                        {$user can_get_achievements}
                        {!=
                           {$user get_track_sym}
                           $required_part}}
                     {achievements
                        submit
                        {$user get_user_num}
                        ach_challenge_ride_along}}}}}
         {{tour band}
            update_challenge_achievements}
         {{tour band}
            unlock_new_challenge_songs}
         {stars.lbl
            set_localized
            {sprintf
               "%i/%i"
               {$band challenge_stars $event}
               {$event total_stars}}}
         {heading.lbl
            set_localized
            {localize tour_challenge_complete}}
         {challenge.grp set_showing TRUE}
         {botb.grp set_showing FALSE}
         {$this
            add_item
            "$"
            {localize tour_band_reward}
            get_cash.cue
            0
            {$band reward TRUE}}
         {if
            {!=
               {$band char_unlock}
               ''}
            {$this
               add_item
               "U"
               {sprintf
                  {localize tour_band_outfit}
                  {localize
                     {$event char_unlock_token}}}
               get_unlock.cue}}
         {if
            $num_new
            {$this
               add_item
               "U"
               {localize tour_challenge_complete_num_new}
               get_unlock.cue
               0
               $num_new}}
         {$this play}})}
{new
   BandScreen
   tour_challenge_complete_screen
   (panels tour_challenge_complete_panel)
   (focus tour_challenge_complete_panel)
   (helpbar
      {if_else
         {is_leader_local}
         ((confirm tour_hb_challenge_return))
         ()})
   (scroll_sfx FALSE)}
