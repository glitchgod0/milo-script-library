{new
   TourChallengeDetailsPanel
   tour_challenge_details_panel
   (file
      "tour_challenge_details.milo")
   (focus songs.lst)
   (enter
      {do
         ($event
            {tour event})
         ($band
            {tour band})
         {name.lbl
            set_localized
            {$event display_name}}
         {description.lbl
            set_localized
            {$event description}}
         {songs.lst
            set_provider
            {$this song_provider}}
         {do
            ($met
               {$band challenge_event_reqs $event})
            ($status
               {$band challenge_status $event})
            {requirements.grp
               set_showing
               {! $met}}
            {unless
               $met
               {do
                  ($p
                     {tour requirement_provider})
                  {$p set_by_challenge $band $event}
                  {requirements.lst set_provider $p}}}
            {unlock.grp set_showing $met}
            {if
               $met
               {do
                  ($num_new
                     {$band num_new_challenges $event})
                  ($char_unlock
                     {$event char_unlock_token})
                  {unlock_challenge.lbl set_showing $num_new}
                  {unlock_challenge.lbl
                     set_localized
                     {sprintf
                        {localize
                           {if_else
                              {== $num_new 1}
                              tour_challenge_num_new_singular
                              tour_challenge_num_new}}
                        $num_new}}
                  {unlock_char.lbl
                     set_showing
                     {!= $char_unlock ''}}
                  {unlock_char.lbl set text_token $char_unlock}
                  {unlock.grp
                     set_showing
                     {'||'
                        {unlock_challenge.lbl showing}
                        {unlock_char.lbl showing}}}}}
            {played.grp
               set_showing
               {== $status kTourPlayed}}
            {if
               {== $status kTourPlayed}
               {playerdiff.pdiff
                  set
                  num_players
                  {$band challenge_max_players $event}}
               {playerdiff.pdiff
                  set
                  diff
                  {$band challenge_max_diff $event}}
               {stars.lbl
                  set_localized
                  {sprintf
                     "%i/%i"
                     {$band challenge_stars $event}
                     {$event total_stars}}}}}})
   (BUTTON_DOWN_MSG
      {if_else
         {== $action kAction_Confirm}
         {if_else
            {{tour band}
               challenge_event_reqs
               {tour event}}
            {do
               {synth play button_select}
               {{tour band}
                  confirm_event}
               {ui goto_screen tour_challenge_seldiff_screen}}
            {do
               {synth play button_error}
               {requirements.lst animate_elements TRUE}}}
         kDataUnhandled})}
