{new
   TourChallengePanel
   tour_botb_challenge_panel
   TOUR_CHALLENGE_PANEL
   (enter
      {if
         {!
            {server is_connected}}
         {band_ui trigger_event botb_error}}
      {server
         add_sink
         $this
         (server_status_changed)})
   (exit
      {server remove_sink $this server_status_changed})
   (server_status_changed
      ($connected)
      {if
         {! $connected}
         {band_ui trigger_event botb_error}})
   (SELECT_MSG
      {if_else
         {{tour event}
            is_expired}
         {ui push_screen tour_botb_expired_screen}
         {do
            {botb_details_panel
               set_battle_data
               {{tour event}
                  battle_id}
               {tour band}}
            {ui goto_screen botb_details_screen}}})}
