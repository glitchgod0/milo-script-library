(define Interface 
   (description "The interface for a city chip on the world map screen.") 
   (props 
      (city symbol 
         (help "Which city does this instance represent?") 
         (allowed_values $allowed_city_values) 
         (set_on_instance TRUE)) 
      (active bool 
         (help "Should this instance be active?") 
         (set_on_instance TRUE)) 
      (hidden bool 
         (help "Should this instance be hidden?") 
         (set_on_instance TRUE))))
