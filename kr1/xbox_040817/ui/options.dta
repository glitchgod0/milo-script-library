;; ////////////////////////////////////////////////////////
;; ////////////////////////////////////////////////////////
;; MEMCARD SCREEN

(kara_panel memcard

   ;; text to update
   (label_comp "save_status"
      (rnd_name "1")
   )

   (label_comp "mc_slot"
      (rnd_name "title2")
   )

   (label_comp "mc_status"
      (rnd_name "2")
   )

   (label_comp "tri_help"
      (rnd_name "help1")
   )

   (label_comp "x_help"
      (rnd_name "help2")
   )

   ;; buttons
   (kara_button_comp save button_style_arial
	   (rnd_name "but_01")
	)
   (kara_button_comp load button_style_arial
	   (rnd_name "but_02")
	)
;   (kara_button_comp refresh button_style_arial
;	   (rnd_name "but_03")
;	)
   (kara_lrbutton_comp autosave button_style_arial 
	   (rnd_name "but_04")
      (left_but left_arrow_style)
      (right_but right_arrow_style)
      (options "autosave_on" "autosave_off")
	)

    (navigator  (vertical save load autosave) )
   (focus save)
)

( memcard_screen memcard
   (panels memcard)
   (screen_transitions
      (kPad_Tri options)
   )
)

