{new BandScreen
   store_loading_screen
   (panels meta meta_loading)
   (TRANSITION_COMPLETE_MSG {ui goto_screen store_real_loading_screen})
   (enter {{meta_loading find waiting.lbl} set_showing FALSE})
}
{new BandScreen
   store_real_loading_screen
   (panels meta store_bg store_panel meta_loading)
   (enter {{meta_loading find waiting.lbl} set_showing FALSE})
   (store_mode dlc)
   (TRANSITION_COMPLETE_MSG
      {if {store_panel get load_ok}
         {switch [store_mode]
            (dlc {ui goto_screen store_menu_screen})
            (token {ui goto_screen token_redemption_screen})
         }
      }
   )
}
{new UIPanel
   bandhub3_root_panel
   (file hub_bg.milo)
   (enter {meta enter_start_screen})
   (exit {meta exit_start_screen})
}
{new UIPanel
   main_hub_panel
   (file bandhub3_root.milo)
   (local_motd_str "")
   (set_motd
      ($motd)
      {print "motd: " $motd "\n"}
   )
   (set_dlcmotd
      ($motd)
      {print "dlcmotd: " $motd "\n"}
      {set [local_motd_str] $motd}
      {if {$this is_up}
         {motd.lbl set text_token connecting_server}
         {motd.lbl set text_token [local_motd_str]}
      }
   )
   (enter
      {motd.lbl set text_token connecting_server}
      {motd.lbl set text_token [local_motd_str]}
      {switch {system_language}
         (deu {musicstore_title.mesh set_showing 1})
         (eng {musicstore_title.mesh set_showing 1})
         (esl {musicstore_esl.mesh set_showing 1})
         (fre {musicstore_title.mesh set_showing 1})
         (ita {musicstore_title.mesh set_showing 1})
      }
   )
   (poll
      {if_else {platform_mgr is_any_user_signed_into_live}
         {splash_msg_text.lbl set_showing 0}
         {splash_msg_text.lbl set_showing 1}
      }
   )
}
{new BandScreen
   main_hub_screen_transition
   (panels meta bandhub3_root_panel main_hub_panel)
   (next_screen main_hub_screen)
   (TRANSITION_COMPLETE_MSG {ui goto_screen main_hub_screen})
}
{new BandScreen
   main_hub_screen
   (panels meta bandhub3_root_panel main_hub_panel)
   (enter
      {print "* Enter main_hub_screen\n"}
      {input_mgr clear_user}
   )
   (BUTTON_DOWN_MSG
      {cond
         ({== $action kAction_Confirm}
            {input_mgr set_user $user}
            {play_instr_sfx $user button_select}
            #ifdef HX_XBOX
            {if_else
               {'||'
                  {! {platform_mgr is_user_signed_into_live $user}}
                  {platform_mgr is_user_a_guest $user}
               }
               {ui push_screen main_store_signin_screen}
               {do
                  {delete_old_hub}
                  {ui abstract_wipe}
                  {ui goto_screen store_loading_screen}
               }
            }
            #endif
         )
         ({== $action kAction_Cancel}
            {play_instr_sfx $user button_back}
            {exit_to_dash}
         )
         ({== $action kAction_Option}
            {play_instr_sfx $user button_select}
            {ui push_screen credits_screen}
         )
      }
   )
}