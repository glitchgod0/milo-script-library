{new UIPanel
   album_edit_panel
   (file "Album_Edit.milo")
   (focus Album_Title.btn)
   (reset_focus TRUE)
   (current_album 0)
   (enter
      {do
         ($index 0)
         ($song_index 0)
         ($album {{tour band} get_album_from_index [current_album]})
         ($is_finalised {{tour band} is_album_finalised $album})
         {while {< $index kMaxAlbums}
            {if_else {!= $index [current_album]}
               {{$this find {sprintf "Album%02d.grp" {'+' $index 1}}} set_showing FALSE}
               {do
                  {{$this find {sprintf "Album%02d.grp" {'+' $index 1}}} set_showing TRUE}
                  {{$this
                        find
                        {sprintf
                           "AlbumHighlightOn_%02d.trig"
                           {'+' $index 1}}} trigger

                  }
               }
            }
            {'++' $index}
         }
         {if_else {> {{tour band} get_num_album_songs $album} 3}
            {do
               {Setlist_3.grp set_showing FALSE}
               {Setlist_6.grp set_showing TRUE}
               {while {< $song_index 6}
                  {if_else {'||' $is_finalised {album_edit_menu_panel get is_recordable}}
                     {{$this
                           find
                           {sprintf
                              "Setlistsong_6_%02d.lbl"
                              {'+' $song_index 1}}} set_localized
                        {song_mgr song_name
                           {{tour band} get_album_song $album $song_index}
                        }
                     }
                     {{$this
                           find
                           {sprintf
                              "Setlistsong_6_%02d.lbl"
                              {'+' $song_index 1}}} set_localized
                        ""
                     }
                  }
                  {'++' $song_index}
               }
            }
            {do
               {Setlist_3.grp set_showing TRUE}
               {Setlist_6.grp set_showing FALSE}
               {while {< $song_index 3}
                  {if_else {'||' $is_finalised {album_edit_menu_panel get is_recordable}}
                     {{$this
                           find
                           {sprintf
                              "Setlistsong_3_%02d.lbl"
                              {'+' $song_index 1}}} set_localized
                        {song_mgr song_name
                           {{tour band} get_album_song $album $song_index}
                        }
                     }
                     {{$this
                           find
                           {sprintf
                              "Setlistsong_3_%02d.lbl"
                              {'+' $song_index 1}}} set_localized
                        ""
                     }
                  }
                  {'++' $song_index}
               }
            }
         }
         {setup_album_look $this [current_album]}
      }
   )
   (show_cover
      {EditPos_On.trig trigger}
      {$this set_focus
         {$this find {sprintf "Album%02d.lst" {'+' [current_album] 1}}}
      }
      {Album_Title.btn set text_token change_album_cover}
   )
   (hide_cover
      {EditPos_Off.trig trigger}
      {$this set_focus Album_Title.btn}
      {Album_Title.btn set text_token edit_album}
   )
   (SELECT_MSG
      {do
         ($album {{tour band} get_album_from_index [current_album]})
         ($current_list
            {$this find {sprintf "Album%02d.lst" {'+' [current_album] 1}}}
         )
         {switch $component
            (
               (Album01.lst Album02.lst Album03.lst Album04.lst Album05.lst Album06.lst)
               {do
                  ($album {{tour band} get_album_from_index [current_album]})
                  {{tour band} set_album_cover
                     $album
                     {{tour
                           album_provider
                           [current_album]} get_album_art_name
                        {$current_list selected_pos}
                     }
                  }
                  {cond
                     ({==
                           {ui current_screen}
                           garage_album_cover_edit_screen}
                        {ui goto_screen garage_album_edit_screen}
                     )
                     ({==
                           {ui current_screen}
                           special_event_album_cover_edit_screen}
                        {ui goto_screen special_event_album_edit_screen}
                     )
                     (TRUE {ui goto_screen album_edit_screen})
                  }
                  {$this hide_cover}
                  {synth play button_select}
               }
            )
         }
      }
   )
}
{new UIPanel
   album_edit_menu_panel
   (file "Album_Edit_Menu.milo")
   (focus 1EditArtwork.btn)
   (is_recordable FALSE)
   (enter
      {if_else [is_recordable]
         {$this enable 4RecordAlbum.btn}
         {$this disable 4RecordAlbum.btn}
      }
   )
   (FOCUS_MSG DO_FOCUSCLICK kDataUnhandled)
   (SELECT_MSG
      {switch $component
         (1EditArtwork.btn
            {cond
               ({==
                     {ui current_screen}
                     garage_album_edit_screen}
                  {ui goto_screen garage_album_cover_edit_screen}
               )
               ({==
                     {ui current_screen}
                     special_event_album_edit_screen}
                  {ui goto_screen special_event_album_cover_edit_screen}
               )
               (TRUE {ui goto_screen album_cover_edit_screen})
            }
            {album_edit_panel show_cover}
         )
         (2AlbumName.btn
            {do
               #ifndef HX_OG
               ($album
                  {{tour band} get_album_from_index {album_edit_panel get current_album}}
               )
               {virtual_keyboard show_keyboard
                  $player_num
                  {get_band_name_length}
                  {localize edit_album_title_vk_title}
                  {localize edit_album_title_vk_desc}
                  {{tour band} get_album_name $album}
                  $this
               }
               #else
               {if {{tour band} has_album_index {album_edit_panel get current_album}}
                  {input_mgr set_limit kLimitNone}
                  {input_mgr set_user {user_mgr get_band_user $player_num}}
               }
               {ui push_screen album_renaming_office_screen}
               #endif
               {{album_edit_panel find Album_Title.btn} set text_token change_album_title}
               {synth play button_select}
            }
         )
         (3ChangeSetlist.btn
            {do
               ($album
                  {{tour band} get_album_from_index {album_edit_panel get current_album}}
               )
               {song_offer_provider set_setlist_mode TRUE}
               {{tour band} reset_album_setlist $album}
               {cond
                  ({==
                        {ui current_screen}
                        garage_album_edit_screen}
                     {do
                        {garage_album_setlist_edit_screen set
                           current_album
                           {album_edit_panel get current_album}
                        }
                        {ui goto_screen garage_album_setlist_edit_screen}
                     }
                  )
                  ({==
                        {ui current_screen}
                        special_event_album_edit_screen}
                     {do
                        {special_event_album_setlist_edit_screen set
                           current_album
                           {album_edit_panel get current_album}
                        }
                        {ui goto_screen special_event_album_setlist_edit_screen}
                     }
                  )
                  (TRUE
                     {do
                        {album_setlist_edit_screen set
                           current_album
                           {album_edit_panel get current_album}
                        }
                        {ui goto_screen album_setlist_edit_screen}
                     }
                  )
               }
            }
         )
         (4RecordAlbum.btn
            {cond
               ({==
                     {ui current_screen}
                     garage_album_edit_screen}
                  {do
                     {difficulty_screen set cancel_screen garage_album_edit_screen}
                     {ui goto_screen difficulty_screen}
                  }
               )
               ({==
                     {ui current_screen}
                     special_event_album_edit_screen}
                  {do
                     {qp_difficulty_screen set cancel_screen special_event_album_edit_screen}
                     {ui goto_screen qp_difficulty_screen}
                  }
               )
               (TRUE)
            }
         )
      }
   )
   #ifndef HX_OG
   (VIRTUAL_KEYBOARD_RESULT_MSG
      {if {&& $ok $this {ui focus_panel} {== {ui focus_panel} $this}}
         {do
            ($album
               {{tour band} get_album_from_index {album_edit_panel get current_album}}
            )
            {if_else
               {&&
                  {!= $text ""}
                  {'||'
                     {== {{tour band} band_name} $text}
                     {== {{tour band} get_album_name $album} $text}
                     {ui is_valid_name $text}
                  }
               }
               {do
                  {{tour band} set_album_name $album $text}
                  {setup_album_look album_edit_panel {album_edit_panel get current_album}}
               }
               {ui push_screen tour_band_create_illegal_name_screen}
            }
            {{album_edit_panel find Album_Title.btn} set text_token edit_album}
         }
      }
   )
   #endif
}
