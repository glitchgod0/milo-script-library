#define kMaxAlbums (6)
{new UIPanel
   album_select_panel
   (file "Album_Select.milo")
   (focus Select_Album.btn)
   (current_album 0)
   (enter
      {do
         ($index 0)
         {while {< $index kMaxAlbums}
            {do
               {setup_album_look $this $index}
               {'++' $index}
            }
         }
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (kAction_Up
            {$this focus_off [current_album]}
            {if_else {== [current_album] 0}
               {$this set current_album {- kMaxAlbums 1}}
               {-- [current_album]}
            }
            {$this focus_on [current_album]}
            {synth play button_focus}
         )
         (kAction_Down
            {$this focus_off [current_album]}
            {if_else {== [current_album] {- kMaxAlbums 1}}
               {$this set current_album 0}
               {'++' [current_album]}
            }
            {$this focus_on [current_album]}
            {synth play button_focus}
         )
         (kAction_Confirm
            {if_else {{tour band} has_album_index [current_album]}
               {do
                  {cond
                     ({==
                           {ui current_screen}
                           garage_album_select_screen}
                        {do
                           {difficulty_screen set cancel_screen garage_album_select_screen}
                           {{tour band} set_promo {{tour band} get_album_from_index [current_album]}}
                           {ui goto_screen difficulty_screen}
                        }
                     )
                     ({==
                           {ui current_screen}
                           special_event_album_select_screen}
                        {do
                           {difficulty_screen set cancel_screen special_event_album_select_screen}
                           {{tour band} set_promo {{tour band} get_album_from_index [current_album]}}
                           {ui goto_screen qp_difficulty_screen}
                        }
                     )
                     (TRUE
                        {do
                           {album_edit_panel set current_album [current_album]}
                           {album_edit_menu_panel set is_recordable FALSE}
                           {ui goto_screen album_edit_screen}
                        }
                     )
                  }
               }
               FALSE
            }
         )
      }
      kDataUnhandled
   )
   (focus_off
      ($index)
      {{$this
            find
            {sprintf
               "AlbumHighlightOff_%02d.trig"
               {'+' $index 1}}} trigger

      }
   )
   (focus_on
      ($index)
      {if_else {{tour band} has_album_index $index}
         {if_else
            {&&
               {== {ui current_screen} album_select_screen}
               {> {user_mgr get_num_participants} 1}
            }
            {helpbar set_config
               (
                  (cancel helpbar_back)
                  (confirm helpbar_confirm)
                  (state_confirm helpbar_take_control)
               )
            }
            {helpbar set_config
               (
                  (cancel helpbar_back)
                  (confirm helpbar_confirm)
               )
            }
         }
         {if_else
            {&&
               {== {ui current_screen} album_select_screen}
               {> {user_mgr get_num_participants} 1}
            }
            {helpbar set_config
               (
                  (cancel helpbar_back)
                  (state_confirm helpbar_take_control)
               )
            }
            {helpbar set_config ((cancel helpbar_back))}
         }
      }
      {{$this
            find
            {sprintf
               "AlbumHighlightOn_%02d.trig"
               {'+' $index 1}}} trigger

      }
   )
   (TRANSITION_COMPLETE_MSG {$this focus_on [current_album]})
}
{func setup_album_look
   ($panel $index)
   {do
      {{$panel
            find
            {sprintf
               "Album%02d.lst"
               {'+' $index 1}}} set_provider
         {tour album_provider $index}
      }
      {if_else
         {'||'
            {== {ui current_screen} garage_album_edit_screen}
            {== {ui current_screen} special_event_album_edit_screen}
            {== {ui current_screen} album_renaming_office_screen}
            {{tour band} has_album_index $index}
         }
         {do
            ($album {{tour band} get_album_from_index $index})
            ($album_name {{tour band} get_album_name $album})
            ($album_cover {{tour band} get_album_cover $album})
            {{$panel
                  find
                  {sprintf
                     "bandname%02d.lbl"
                     {'+' $index 1}}} set
               text_token
               {{tour band} band_name}
            }
            {{$panel
                  find
                  {sprintf
                     "albumname%02d.lbl"
                     {'+' $index 1}}} set
               text_token
               $album_name
            }
            {{$panel
                  find
                  {sprintf
                     "Album%02d.lst"
                     {'+' $index 1}}} set_selected
               {{tour album_provider $index} get_album_art_index {symbol $album_cover}}
            }
            {{$panel
                  find
                  {sprintf
                     "AlbumLocked%02d.mesh"
                     {'+' $index 1}}} set_showing
               FALSE
            }
            {{$panel find {sprintf "Album%02d.mesh" {'+' $index 1}}} set_showing TRUE}
         }
         {do
            {{$panel find {sprintf "Album%02d.mesh" {'+' $index 1}}} set_showing FALSE}
            {{$panel
                  find
                  {sprintf
                     "AlbumLocked%02d.mesh"
                     {'+' $index 1}}} set_showing
               TRUE
            }
         }
      }
   }
}
